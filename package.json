{
  "name": "angular-component-navigator",
  "displayName": "Angular Component Navigator",
  "description": "Jump to selected component from the Angular HTML file.",
  "version": "0.0.1",
  "publisher": "Michael Leib",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "angular-component-navigator.jumpToComponent",
        "title": "Jump to Component",
        "category": "Angular"
      }
    ],
    "keybindings": [
      {
        "command": "angular-component-navigator.jumpToComponent",
        "key": "ctrl+alt+g",
        "mac": "shift+cmd+g",
        "when": "editorTextFocus && (editorLangId == 'html' || editorLangId == 'typescript')"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf dist out"
  },
  "dependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "rimraf": "^5.0.5"
  }
}
